.l-common-wrap
	padding-bottom 0px

.l-container
	max-width 1400px
	width 100%
	margin 0 auto
	position relative
	// padding 0 10px
	padding 0 25px
	@media $max_sm
		padding 0 30px
	@media $max_xs
		padding 0 15px
.l-header
	padding-bottom 30px
	background-position center
	background-repeat no-repeat
	background-size cover
	position relative
	&:before
		content ''
		position absolute
		stick()
		background-color rgba(26, 38, 45, 0.75)
	@media $max_sm
		padding-bottom 0
		margin-bottom 40px
.l-header,footer
	background-color $black
	color $beige

.b-header
	display table
	table-layout fixed
	width 100%
	padding 20px 0
	&__top-l,
	&__top-r,
	&__top-c
		display table-cell
		vertical-align middle
		position relative
		z-index 16
	&__top-r
		text-align right
		&.js-menu .b-mobile-wrapper
			top 125px
			padding-top 0
			@media $max_xs
				top 100px
			&.b-mobile-wrapper
				&:before
					// top 15px
					top 0
					
		// @media $min_md
		// 	position relative
		// 	&:after
		// 		content ''
		// 		position absolute
		// 		left 0
		// 		width 100%
		// 		border-bottom 1px solid rgba(252, 240, 226, .25)
		// 		bottom -20px
	&__top-c
		// width 89px
		width 149px
		padding-left 30px
		padding-right 30px
		@media $max_sm
			padding-left 0
			padding-right 0
			width 63px
			img 
				width 100%
		@media $max_xs
			width 51px
	.b-contact
		&_inline:last-child
			padding-left 28px
	&__top-l
		@media $min_md
			position relative
			&:after
				content ''
				position absolute
				left 0
				width 100%
				border-bottom 1px solid rgba(252, 240, 226, .25)		
				bottom -20px
	&_center
		width 800px
		height 442px
		margin 80px auto 39px
		text-align center
		background url(../img/cow-2.png) no-repeat
		padding-top 79px
		@media $max_sm
			width 100%
			padding-top 135px
			background-size 100%
			background-position center
		@media $max_xs
			margin-top 10px
			margin-bottom 0
			padding-top 66px
			height 364px
		.b-title-1
			margin-bottom 20px
			@media $max_sm
				margin-bottom 36px
			@media $max_xs
				font-size 34px
				margin-bottom 17px
	&__text
		padding 0 130px
		font-size 17px
		line-height 1.53
		margin-bottom 33px
		p
			color #fcf0e2
		@media $max_sm
			padding 0 50px
			font-size 15px
			margin-bottom 32px
		@media $max_xs
			padding 0
			margin-bottom 24px
	&_bottom
		background $black
		margin-bottom 30px
		@media $max_sm
			display block
			width auto
			margin 100px 0 -218px
			padding 10px 40px
		@media $max_xs
			margin 76px 0 -150px
			padding 0 40px 29px

.b-header-mobile_active-menu
	position fixed
	background $black
	padding 20px 30px 
	z-index 3
	left 0
	top 0
	@media $max_xs
		padding 20px 15px
.b-contact
	&__title
		display block
		font-size 14px
		color $light_beige
		margin-bottom 4px	
	&__value
		text-transform uppercase
		font-size 17px
		font-weight bold
		display inline-block
		@media $max_xs
			font-size 15px
		&_email
			color $green
		&:nth-child(2)
			margin-right 3px
	&_column
		margin-bottom 20px
	&_inline
		display inline-block
	&__title_roster
		color rgba(49, 63, 72, 0.6)
		margin-bottom 2px
	&__text
		font-weight bold
		line-height 1.1
		padding-top 5px
		font-size 17px
		@media $max_xs
			font-size 15px
	&_roster
		margin-top 23px
.b-mobile-wrapper .b-contact
	@media $max_sm
		display none
.b-nav
	position relative
	text-align center
	// border-bottom 1px solid $beige
	border-bottom 1px solid rgba(252, 240, 226, .25)
	&__item
		display inline-block
		text-transform uppercase
		padding 21px 20px
		max-width 215px
		flex-grow 1
		margin 0
		font-family 'Oswald-Medium'
		font-size 15px
		font-weight 500
		white-space nowrap
		text-decoration none
		&_active
			background $beige
			color $black
		&:hover
			@media $working_hover
				background $beige
				color $black
				text-decoration none
	.b-mobile-wrapper__menu
		display flex
		justify-content center
		@media $max_sm
			display block
	@media $max_sm
		display none
	&.js-menu
		display block
.b-cell
	display inline-block
	width 33%
	border-left 1px solid #40484b
	padding 20px 0 15px 40px
	@media $max_sm
		text-align center
		width 100%
		border-left none
		border-bottom 1px solid #40484b		
		padding 30px 0 22px 40px
		&:first-child 
			border-bottom 1px solid #40484b		
		&:last-child
			border none
	@media $max_xs
		padding-left 0
		padding-bottom 6px
	&:first-child
		border none
	&__image,
	&__text
		display inline-block
	&__image
		@media $max_sm
			margin-right 15px
	&__text
		position absolute
		font-size 17px
		font-weight bold
		color $beige
		margin-left 13px
		@media $max_sm
			min-width 210px
			position relative
			text-align left
			top -9px
		@media $max_xs
			min-width 200px
			text-align center
			display block
			margin-left 0
.b-logo	
	position relative
.b-header-link
	width 25px
	height 25px
	display none
	@media $max_sm
		display inline-block
		z-index 99
	@media $max_xs
		margin-left 0
		img 
			width 25px
	&:nth-child(3)
		margin-left 28px
		margin-right 6px
		@media $max_xs
			margin-left 16px
			margin-right 1px
	&_navicon
		position relative
		border-bottom 2px double $beige 
		border-top 2px solid $beige
		height 21px
		width 28px
		&.b-header-link_close
			@media $max_xs
				height 24px
		&:after
			position absolute
			content ""
			width 100%
			border-top 2px solid $beige
			top 7px
			@media $max_xs
				top 7px
	&_close
		background url(../img/close.png) no-repeat
		border none 
		&:after
			border none 
		img 
			display none
	&_phone img
		@media $max_xs
			width 22px