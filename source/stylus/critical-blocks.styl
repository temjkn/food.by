.l-common-wrap
	padding-bottom 0px

.l-container
	max-width 1400px
	width 100%
	margin 0 auto
	position relative
	padding 0 10px
	@media $min_md
		padding 0 25px
.l-header
	padding-bottom 30px
	background-position center
	background-repeat no-repeat
	background-size cover
	position relative
	&:before
		content ''
		position absolute
		stick()
		background-color rgba(26, 38, 45, 0.75)
.l-header,footer
	background-color $black
	color $beige

.b-header
	display table
	table-layout fixed
	width 100%
	padding-top 20px
	padding-bottom 20px
	&__top-l,
	&__top-r,
	&__top-c
		display table-cell
		vertical-align middle
	&__top-r
		text-align: right
	&__top-c
		width 89px
	.b-contact
		&_inline:last-child
			padding-left 28px
	&_center
		width 800px
		height 442px
		margin 80px auto 39px
		text-align center
		background url(../img/cow-2.png) no-repeat
		padding-top 79px
		.b-title-1
			margin-bottom 20px
	&__text
		padding 0 130px
		font-size 17px
		line-height 1.53
		margin-bottom 33px
		p
			color #fcf0e2
	&_bottom
		background $black
		margin-bottom 30px
.b-contact
	&__title
		display block
		font-size 14px
		color $light_beige
		margin-bottom 4px
	&__value
		text-transform uppercase
		font-size 17px
		font-weight bold
		display inline-block
		&_email
			color $green
		&:nth-child(2)
			margin-right 3px
	&_column
		margin-bottom 20px
	&_inline
		display inline-block
	&__title_roster
		color rgba(49, 63, 72, 0.6)
		margin-bottom 2px
	&__text
		font-weight bold
		line-height 1.1
		padding-top 5px
		font-size 17px
	&_roster
		margin-top 23px
.b-nav
	position relative
	text-align center
	border-bottom 1px solid $beige
	display flex
	justify-content center
	&:after
		position absolute
		top 0
		left 0
		content ''
		width 44.6%
		border-top 1px solid $beige
	&:before
		position absolute
		top 0
		right 0
		content ''
		width 44.6%
		border-top 1px solid $beige
	&__item
		display inline-block
		text-transform uppercase
		// padding 21px 79px
		padding 21px 20px
		max-width 215px
		flex-grow 1
		margin 0
		font-family 'Oswald-Medium'
		font-size 15px
		font-weight 500
		white-space nowrap
		&_active
			background $beige
			color $black
		&:hover
			background $beige
			color $black
			text-decoration none
.b-cell
	display inline-block
	width 33%
	border-left 1px solid #40484b
	padding 20px 0 15px 40px
	&:first-child
		border none
	&__image,
	&__text
		display inline-block
	&__text
		position absolute
		font-size 17px
		font-weight bold
		color $beige
		margin-left 13px

.p-main
	.section-news
		margin-top 85px
		margin-bottom 80px
		.b-heading
			align-items flex-end
			&:before
				right 50%
				transform translateX(50%)
			.b-button
				margin-bottom 8px