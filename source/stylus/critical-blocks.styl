.l-common-wrap
	padding-bottom 100px
.l-container
	max-width 1370px
	width 100%
	margin 0 auto
	position relative
	padding 0 10px
.l-header
	padding-bottom 30px
	background-position center
	background-repeat no-repeat
	background-size cover
	position relative
	&:before
		content ''
		position absolute
		stick()
		background-color rgba(26, 38, 45, 0.75)
.l-header,footer
	background-color $black
	color $beige
.b-header
	display table
	table-layout fixed
	width 100%
	padding-top 20px
	padding-bottom 20px
	&__top-l,
	&__top-r,
	&__top-c
		display table-cell
		vertical-align middle
	&__top-r
		text-align: right 
	&__top-c
		width 89px
	&-center
		width 800px
		margin 0 auto
		padding-top 78px
		padding-bottom 130px
		text-align center
		background: url('../img/cow-2.png') no-repeat
		&__text 
			padding 0 140px
			line-height 1.53
			color $beige
	.b-contact
		&_inline:last-child
			padding-left 28px			
.b-contact
	&__title
		display block
		font-size 14px
		color $light_beige
		margin-bottom 4px
	&__value
		text-transform uppercase
		font-size 17px
		font-weight bold
		display inline-block
		&_email
			color $green
	&__value:last-child
		padding-left 3px
	&_column
		margin-bottom 20px
	&_inline
		display inline-block
	&__title_roster
		color rgba(49, 63, 72, 0.6)
		margin-bottom 2px
	&__text
		font-weight bold
		line-height 1.1
		padding-top 5px
		font-size 17px
	&_roster
		margin-top 23px	
.b-nav
	position relative
	text-align center
	border-bottom 1px solid $beige
	display flex
	justify-content center
	&:after
		position absolute
		top 0
		left 0
		content ''
		width 44.6%
		border-top 1px solid $beige
	&:before
		position absolute
		top 0
		right 0
		content ''
		width 44.6%
		border-top 1px solid $beige
	&__item
		display inline-block
		text-transform uppercase
		padding 21px 20px
		max-width 215px
		flex-grow 1
		margin 0
		font-family 'Oswald-Medium'
		font-size 15px
		font-weight 500
		white-space nowrap
		&_active
			background $beige
			color $black
		&:hover
			background $beige
			color $black
			text-decoration none
.p-main .b-nav
	margin-bottom 80px